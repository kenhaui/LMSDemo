<div class="col-sm-9">
<p id="notice"><%= notice %></p>

<h1>Listing Courses</h1>

<% @courses.each do |course| %>
  <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title"><span class="glyphicon glyphicon-book">&nbsp;</span><%= link_to course.name, course %></h3>
      </div>
      <div class="panel-body">
        <%= course.description %>
      </div>
      <div class="panel-footer">
      <% if current_user.has_role? :teacher %>
        <%= link_to 'Edit', edit_course_path(course) %> |
        <%= link_to 'Delete', course, method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>
        &nbsp;<span class="glyphicon glyphicon-user"></span>&nbsp;<%= course.user.email %>
      </div>
</div>
<% end %>
<br>

</div>